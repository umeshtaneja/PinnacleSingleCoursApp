<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:id="@+id/explore_background"
    android:layout_height="285dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <TextView
        android:transitionName="@string/subjectTransition"
        android:id="@+id/explore_subject_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/explore_subject_icon"
        android:layout_below="@id/explore_subject_title"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/explore_card_spacing"/>
    <TextView
        android:id="@+id/explore_subject_brief"
        android:maxLines="3"
        android:textSize="@dimen/text_normal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_below="@id/explore_subject_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</FrameLayout>
